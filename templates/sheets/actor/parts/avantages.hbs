            <h4>PHYSIQUE - Force : Puissance</h4>
            <div class="avantage-control-line">
                <label class="clickable-label" data-description="puissance">Puissance</label>
                <div class="avantage-dots-container">
                    {{#if (and system.force (gte system.force 50))}}
                        {{#each (range 1 (div (sub system.force 1) 50))}}
                            <span class="avantage-dot {{#if (lookup ../system.puissance this)}}filled{{/if}}"
                                  data-level="{{this}}"
                                  data-avantage-key="puissance"
                                  title="Niveau {{this}} de Puissance"></span>
                        {{/each}}
                    {{else}}
                        <span class="avantage-none-message">Aucune puissance (Force < 50)</span>
                    {{/if}}
                </div>
            </div>
            <div class="description-note" id="desc-puissance" style="display: none;">
                <small>{{localize "ambre.descriptions.puissance"}}</small>
            </div>
        </div>
