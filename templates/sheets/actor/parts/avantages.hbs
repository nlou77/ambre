<!-- Section for All Avantages -->
<h3 class="clickable-tab-title section-header-with-controls {{#if avantagesExpanded}}active{{/if}}" data-tab-target="avantages-content-area">
    <span>Avantages</span>
    <a class="button icon-button refresh-avantages-button" title="Réinitialiser tous les avantages"><i class="fas fa-sync-alt"></i></a>
</h3>
