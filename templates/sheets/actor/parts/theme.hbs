    <div class="opt-group">
        <div class="pouvoirs-section">
            <h3>Entête</h3>
            <div class="pouvoirs-container">
                <div class="pouvoir-row">
                    <input type="radio" 
                            id="header-text-defaut" 
                            name="system.options.headerTextColor" 
                            value="defaut" 
                            {{#if (eq system.options.headerTextColor "defaut")}}checked{{/if}}
                            data-dtype="String"/>
                    <label for="header-text-defaut">Défaut</label>
                </div>
                <div class="pouvoir-row">
                    <input type="radio" 
                            id="header-text-sombre" 
                            name="system.options.headerTextColor" 
                            value="sombre" 
                            {{#if (eq system.options.headerTextColor "sombre")}}checked{{/if}}
                            data-dtype="String"/>
                    <label for="header-text-sombre">Sombre</label>
                </div>
                <div class="pouvoir-row">
