                            {{#if (eq system.options.headerTextColor "lumineux")}}checked{{/if}}
                            data-dtype="String"/>
                    <label for="header-text-lumineux">Lumineux</label>
                </div>
            </div>
        </div>
    </div>

    <div class="opt-group atout-style-settings-group">
        {{!-- This section retains its previous styling method for now. --}}
        {{!-- The class "atout-style-settings-group" can be used for specific styling if needed. --}}
        <div class="theme-item">
            <label>Style d'Atouts</label>
            <div class="select-group">
                <select name="system.atoutStyle" data-dtype="String">
                    <option value="">-- Défaut --</option>
                    {{#select system.atoutStyle}}
                        {{#each (range 1 20)}} {{!-- Loop from 1 to 20 --}}
                            <option value="style{{this}}">Style {{this}}</option>
                        {{/each}}
                    {{/select}}
                </select>
            </div>
        </div>
    </div>
</div>