<main class="possession-content">
  <!-- 
    Note: CSS is required for layout (e.g., flexbox/grid for columns and widths) 
    and styling. JavaScript is needed for drag-and-drop and event handling.
  -->

  <!-- Top Section: Artefacts, Creatures, Ombres -->
  <section class="item-groups top-groups">
    <div class="three-column-layout">
      <div class="left-column"> {{!-- This column structure might be part of a larger layout in possessions.hbs --}}
        <div class="actorDesc-group ombre-group"> {{!-- Consistent class with other sections --}}
          <div class="actorDesc-header"> {{!-- Consistent header --}}
            <h4>OMBRES</h4>
            <a class="item-control item-create" title="Add Ombre" data-item-type="ombre"><i class="fas fa-plus"></i></a>
          </div>
          <div class="drop-target" data-group-type="ombre" aria-label="Drop zone for ombres"> {{!-- Removed inline styles, rely on CSS --}}
            <p class="drop-hint">DÃ©posez vos Ombres ici</p> {{!-- Added drop hint for consistency --}}
            {{#if possessedOmbres}}
            {{#each possessedOmbres}}
              {{!-- Consistent item display structure --}}
              <div class="item draggable-item ombre-list-item-detailed" data-item-id="{{this._id}}" draggable="true">
                <div class="item-details">
                  <h4 class="item-name item-name-clickable" style="color: var(--theme-text-color);" title="Ouvrir {{this.name}}">{{this.name}}</h4>
                </div>
                <div class="item-controls">
                    <a class="item-control item-edit" title="Edit Ombre"><i class="fas fa-edit"></i></a>
                    <a class="item-control item-delete" title="Remove Ombre"><i class="fas fa-trash"></i></a>
                </div>
              </div>
            {{/each}}
            {{else}}
              <p class="no-items-message">Pas d'Ombre.</p> {{!-- Consistent no items message --}}
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
