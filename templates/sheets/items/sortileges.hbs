<form class="sortileges-sheet {{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img class="profile-img" src="/systems/ambre/assets/icons/Spell.png" data-edit="img" title="{{item.name}}"/>
        <div class="header-fields">
            <h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder="Nom du Sortilège"/></h1>
        </div>
    </header>

    {{!-- Sheet Tab Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item active" data-tab="description">Description</a>
        <a class="item" data-tab="details">Détails</a>
        {{!-- Add more tabs as needed --}}
    </nav>

    {{!-- Sheet Body --}}
    <section class="sheet-body">

        <div class="tab description active" data-group="primary" data-tab="description">
            {{editor system.description target="system.description" button=true owner=owner editable=editable}}
        </div>

        <div class="tab details" data-group="primary" data-tab="details">
            {{!-- Example Field: Level --}}
            <div class="form-group">
                <label>Niveau du Sortilège</label>
                <input type="number" name="system.level" value="{{system.level}}" data-dtype="Number"/>
            </div>
            {{!-- Example Field: Casting Time --}}
            <div class="form-group">
                <label>Temps d'Incantation</label>
                <input type="text" name="system.castingTime" value="{{system.castingTime}}" data-dtype="String"/>
            </div>
            {{!-- Add more fields specific to Sortilèges here --}}
        </div>
    </section>
</form>